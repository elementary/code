[Desktop Entry]
Type=Application
Name=Code
Comment=Edit code files
GenericName=Code Editor
Exec=@EXEC_NAME@ %U
Icon=io.elementary.code
Terminal=false
Categories=Development;GTK;IDE;WebDevelopment;
Keywords=text;IDE;scratch;
MimeType=text/plain;
StartupNotify=true
Actions=NewWindow;NewFile;

[Desktop Action NewFile]
Name=New File
Exec=@EXEC_NAME@ --new-tab

[Desktop Action NewWindow]
Name=New Window
Exec=@EXEC_NAME@ --new-window
